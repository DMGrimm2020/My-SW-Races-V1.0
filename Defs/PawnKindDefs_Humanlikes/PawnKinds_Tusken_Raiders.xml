          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  	<minGenerationAge>9</minGenerationAge>
	  <maxGenerationAge>120</maxGenerationAge>
  </PawnKindDef>
  
  <PawnKindDef ParentName="Tusken_RaidersScavTierBase">
    <defName>Tusken_Raiders_Scavenger</defName>
    <label>scavenger gunner</label>
    <apparelMoney>
      <min>300</min>
      <max>500</max>
    </apparelMoney>
    <weaponMoney>
      <min>200</min>
      <max>300</max>
    </weaponMoney>
    <weaponTags>
      <li>Gun</li>
    </weaponTags>
  </PawnKindDef>

  <PawnKindDef ParentName="Tusken_RaidersScavTierBase">
    <defName>Tusken_Raiders_Thrasher</defName>
    <label>scavenger thrasher</label>
    <race>Human</race>
    <canBeSapper>true</canBeSapper>
    <apparelMoney>
      <min>300</min>
      <max>800</max>
    </apparelMoney>
    <apparelTags>
      <li>Outlander</li>
		</apparelTags>
    <weaponMoney>
      <min>100</min>
      <max>160</max>
    </weaponMoney>
    <weaponTags>
      <li>NeolithicMeleeBasic</li>
      <li>MedievalMeleeBasic</li>
      <li>MedievalMeleeDecent</li>
    </weaponTags>
  </PawnKindDef>

  <!-- Mid tier - Tusken_Raiders -->

  <PawnKindDef ParentName="Tusken_RaidersBase">
    <defName>Tusken_Raiders_Pirate</defName>
    <label>pirate gunner</label>
    <race>Human</race>
    <combatPower>65</combatPower>
    <gearHealthRange>
